<!-- app/views/widgets/forms/_input.html.erb -->
<%
  # Props/Inputs
  form ||= nil
  field ||= nil
  label ||= nil
  type ||= "text"
  placeholder ||= ""
  required ||= false
  hint ||= nil
  classes ||= ""
  min ||= nil
  max ||= nil
  step ||= nil
  options ||= nil
%>

<div class="form-group <%= classes %>">
  <% if label %>
    <%= form.label field, label, class: "form-label" %>
  <% end %>
  
  <% case type %>
  <% when "select" %>
    <%= form.select field, options, 
        { prompt: placeholder.present? ? placeholder : "Seleccionar #{label&.downcase}" }, 
        { class: "form-control form-select", required: required } %>
  <% when "number" %>
    <%= form.number_field field, 
        class: "form-control", 
        placeholder: placeholder,
        required: required,
        min: min,
        max: max,
        step: step %>
  <% when "email" %>
    <%= form.email_field field,
        class: "form-control",
        placeholder: placeholder,
        required: required %>
  <% when "text" %>
    <%= form.text_field field,
        class: "form-control",
        placeholder: placeholder,
        required: required %>
  <% when "textarea" %>
    <%= form.text_area field,
        class: "form-control",
        placeholder: placeholder,
        required: required,
        rows: 3 %>
  <% end %>
  
  <% if hint %>
    <small class="form-hint"><%= hint %></small>
  <% end %>
</div>