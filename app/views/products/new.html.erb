<!-- app/views/products/new.html.erb -->
<div class="page-header-widget">
  <div class="page-header-content">
    <h1 class="page-title">Nuevo Producto</h1>
    <div class="page-header-actions">
      <%= link_to "Volver", products_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="form-widget">
  <div class="card-widget">
    <div class="card-header">
      <h3 class="card-title">Información del Producto</h3>
    </div>
    <div class="card-body">
      <%= form_with model: @product, local: true, class: "form-component" do |form| %>
        <div class="form-fields">
          <div class="form-row">
            <div class="form-group">
              <%= form.label :name, "Nombre del Producto", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Ingresa el nombre del producto", required: true %>
              <small class="form-hint">Nombre único que identifique el producto</small>
            </div>
            
            <div class="form-group">
              <%= form.label :price, "Precio (₡)", class: "form-label" %>
              <%= form.number_field :price, step: 0.01, min: 0, class: "form-control", placeholder: "0.00", required: true %>
              <small class="form-hint">Precio de venta en colones</small>
            </div>
            
            <div class="form-group">
              <%= form.label :stock, "Stock Inicial", class: "form-label" %>
              <%= form.number_field :stock, min: 0, class: "form-control", placeholder: "0", required: true %>
              <small class="form-hint">Cantidad disponible en inventario</small>
            </div>
          </div>
        </div>
        
        <div class="form-actions">
          <%= form.submit "Crear Producto", class: "btn btn-primary" %>
          <%= link_to "Cancelar", products_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>