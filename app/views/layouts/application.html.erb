<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Sistema de Facturación</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Base Styles -->
    <link rel="stylesheet" href="/assets/stylesheets/base.css">
    <link rel="stylesheet" href="/assets/stylesheets/layout.css">
    <link rel="stylesheet" href="/assets/stylesheets/widgets.css">
    
    <!-- Component Specific Styles -->
    <% if content_for?(:component_styles) %>
      <%= yield(:component_styles) %>
    <% end %>
  </head>

  <body>
    <nav class="app-nav">
      <div class="nav-container">
        <%= link_to "Sistema de Facturación", root_path, class: "nav-brand" %>
        
        <div class="nav-links">
          <%= link_to "Productos", products_path, class: "nav-item" %>
          <%= link_to "Tasas de Impuesto", tax_rates_path, class: "nav-item" %>
          <%= link_to "Facturas", invoices_path, class: "nav-item" %>
        </div>
      </div>
    </nav>

    <main class="app-main">
      <% if notice %>
        <%= render 'widgets/alerts/alert', type: "success", message: notice %>
      <% end %>

      <% if alert %>
        <%= render 'widgets/alerts/alert', type: "error", message: alert %>
      <% end %>

      <%= yield %>
    </main>

    <!-- Component Specific Scripts -->
    <% if content_for?(:component_scripts) %>
      <%= yield(:component_scripts) %>
    <% end %>
  </body>
</html>